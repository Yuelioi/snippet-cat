{
  "name": "snippet-cat",
  "displayName": "Snippet Cat",
  "description": "Snippet Collections",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:snippet-cat-view",
    "onCommand:snippet-cat.helloWorld"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "snippetCat",
          "title": "Snippet Cat",
          "icon": "media/dep.svg"
        }
      ]
    },
    "views": {
      "snippetCat": [
        {
          "id": "snippet-cat-view",
          "name": "片段管理器",
          "icon": "media/dep.svg",
          "contextualTitle": "Explorer"
        }
      ]
    },
    "commands": [
      {
        "command": "snippet-cat.search",
        "title": "Search",
        "category": "Snippet Cat",
        "icon": {
          "light": "media/icons/interface/light/search.svg",
          "dark": "media/icons/interface/dark/search.svg"
        }
      },
      {
        "command": "snippet-cat.refresh",
        "title": "Refresh",
        "category": "Snippet Cat",
        "icon": {
          "light": "media/icons/interface/light/refresh.svg",
          "dark": "media/icons/interface/dark/refresh.svg"
        }
      },
    
      {
        "command": "snippet-cat.addGroup",
        "title": "Add Group",
        "category": "Snippet Cat",
        "icon": {
          "light": "media/icons/interface/light/add.svg",
          "dark": "media/icons/interface/dark/add.svg"
        }
      },
      {
        "command": "snippet-cat.editGroup",
        "title": "Edit Group",
        "category": "Snippet Cat",
        "icon": {
          "light": "media/icons/interface/light/edit.svg",
          "dark": "media/icons/interface/dark/edit.svg"
        }
      },
      {
        "command": "snippet-cat.deleteGroup",
        "title": "Delete Group",
        "category": "Snippet Cat",
        "icon": {
          "light": "media/icons/interface/light/delete.svg",
          "dark": "media/icons/interface/dark/delete.svg"
        }
      },
      {
        "command": "snippet-cat.addSnippet",
        "title": "Add Snippet",
        "category": "Snippet Cat",
        "icon": {
          "light": "media/icons/interface/light/add.svg",
          "dark": "media/icons/interface/dark/add.svg"
        }
      },
      {
        "command": "snippet-cat.deleteSnippet",
        "title": "Delete Snippet",
        "category": "Snippet Cat",
        "icon": {
          "light": "media/icons/interface/light/delete.svg",
          "dark": "media/icons/interface/dark/delete.svg"
        }
      },
      {
        "command": "snippet-cat.editSnippet",
        "title": "Edit Snippet",
        "category": "Snippet Cat",
        "icon": {
          "light": "media/icons/interface/light/edit.svg",
          "dark": "media/icons/interface/dark/edit.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "snippet-cat.search",
          "when": "view == snippet-cat-view",
          "group": "navigation"
        },
        {
          "command": "snippet-cat.addGroup",
          "when": "view == snippet-cat-view",
          "group": "navigation"
        },
        {
          "command": "snippet-cat.refresh",
          "when": "view == snippet-cat-view",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "snippet-cat.addSnippet",
          "when": "view == snippet-cat-view && viewItem == Group",
          "group": "inline@1"
        },
        {
          "command": "snippet-cat.editGroup",
          "when": "view == snippet-cat-view && viewItem == Group",
          "group": "inline@2"
        },
        {
          "command": "snippet-cat.deleteGroup",
          "when": "view == snippet-cat-view && viewItem == Group",
          "group": "inline@3"
        },
        {
          "command": "snippet-cat.deleteSnippet",
          "when": "view == snippet-cat-view && viewItem == Snippet",
          "group": "inline"
        },
        {
          "command": "snippet-cat.editSnippet",
          "when": "view == snippet-cat-view && viewItem == Snippet",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.71.0",
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.7.4",
    "ts-loader": "^9.3.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "@vscode/test-electron": "^2.1.5"
  }
}