{
  "name": "snippet-cat",
  "displayName": "Snippet Cat",
  "description": "Snippet Collections",
  "version": "0.0.5",
  "publisher": "yuelili",
  "icon": "media/logo.png",
  "sponsor": {
    "url": "https://yuelili.com"
  },
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Snippets"
  ],
  "activationEvents": [
    "onView:snippet-cat-view"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "snippet-cat-view",
        "contents": "还没有设置储存目录[learn more](https://github.com/Yuelioi/snippet-cat/).\n[添加储存目录](command:snippet-cat.main.addStockPath)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "snippetCat",
          "title": "Snippet Cat",
          "icon": "media/cat.svg"
        }
      ]
    },
    "views": {
      "snippetCat": [
        {
          "id": "snippet-cat-view",
          "name": "片段管理器",
          "icon": "media/cat.svg",
          "contextualTitle": "Explorer"
        },
        {
          "id": "snippet-cat-outline",
          "name": "大纲",
          "icon": "media/cat.svg",
          "contextualTitle": "Outline"
        }
      ]
    },
    "configuration": {
      "title": "Snippet Cat",
      "properties": {
        "snippet-cat.lastFileExt": {
          "type": "string",
          "default": "js",
          "description": "新增代码片段默认文件后缀"
        },
        "snippet-cat.sysnModel": {
          "type": "string",
          "default": "github",
          "enum": [
            "github",
            "webdav"
          ],
          "enumDescriptions": [
            "使用webdav进行同步,请设置webdav信息",
            "使用github进行同步(开发中...)"
          ]
        },
        "snippet-cat.github": {
          "type": "object",
          "default": {
            "pull": "git pull origin",
            "push": "git add .|git commit -m '%time'|git push"
          },
          "properties": {
            "pull": {
              "type": "string",
              "default": "git pull origin",
              "description": "pull 指令"
            },
            "push": {
              "type": "string",
              "default": "git add .|git commit -m '%time'|git push",
              "description": "push 指令"
            }
          },
          "required": [
            "pull",
            "push"
          ],
          "additionalProperties": false,
          "description": "GITHUB 设置"
        },
        "snippet-cat.webdav": {
          "type": "object",
          "default": {
            "url": "http://xxx",
            "username": "",
            "password": ""
          },
          "properties": {
            "url": {
              "type": "string",
              "default": "https://",
              "pattern": "(^http[s]?://)(.+)$",
              "description": "WebDAV的地址"
            },
            "username": {
              "type": "string",
              "default": "",
              "description": ""
            },
            "password": {
              "type": "string",
              "default": "",
              "pattern": ""
            }
          },
          "required": [
            "url",
            "username",
            "password"
          ],
          "additionalProperties": false,
          "description": "WEBDAV 设置"
        },
        "snippet-cat.stockPath": {
          "type": "array",
          "default": [
            "",
            "",
            "",
            ""
          ],
          "items": {
            "type": "string"
          },
          "description": "记录MAC $& STOCK PATH",
          "scope": "resource"
        }
      }
    },
    "commands": [
      {
        "command": "snippet-cat.main.search",
        "title": "Search",
        "category": "Snippet Cat",
        "icon": "$(search)"
      },
      {
        "command": "snippet-cat.main.viewSwitch",
        "title": "Switch View",
        "category": "Snippet Cat",
        "icon": "$(testing-show-as-list-icon)"
      },
      {
        "command": "snippet-cat.main.download",
        "title": "Download",
        "category": "Snippet Cat",
        "icon": "$(cloud-download)"
      },
      {
        "command": "snippet-cat.main.upload",
        "title": "Upload",
        "category": "Snippet Cat",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "snippet-cat.main.refresh",
        "title": "Refresh",
        "category": "Snippet Cat",
        "icon": "$(refresh)"
      },
      {
        "command": "snippet-cat.main.addStockPath",
        "title": "Add Stock Path",
        "category": "Snippet Cat",
        "icon": "$(folder-opened)"
      },
      {
        "command": "snippet-cat.main.addGroup",
        "title": "Add Group",
        "category": "Snippet Cat",
        "icon": "$(file-directory-create)"
      },
      {
        "command": "snippet-cat.main.editGroup",
        "title": "Edit Group",
        "category": "Snippet Cat",
        "icon": "$(edit)"
      },
      {
        "command": "snippet-cat.main.deleteGroup",
        "title": "Delete Group",
        "category": "Snippet Cat",
        "icon": "$(trash)"
      },
      {
        "command": "snippet-cat.main.openGroup",
        "title": "Open in System File Explorer",
        "category": "Snippet Cat",
        "icon": "$(folder-opened)"
      },
      {
        "command": "snippet-cat.main.addSnippet",
        "title": "Add Snippet",
        "category": "Snippet Cat",
        "icon": "$(new-file)"
      },
      {
        "command": "snippet-cat.main.editSnippet",
        "title": "Edit Snippet",
        "category": "Snippet Cat",
        "icon": "$(pencil)"
      },
      {
        "command": "snippet-cat.main.deleteSnippet",
        "title": "Delete Snippet",
        "category": "Snippet Cat",
        "icon": "$(trash)"
      },
      {
        "command": "snippet-cat.outline.refresh",
        "title": "Refresh",
        "category": "outline",
        "icon": "$(refresh)"
      }
      ,
      {
        "command": "snippet-cat.outline.copy",
        "title": "Copy",
        "category": "outline",
        "icon": {
          "dark": "media/icons/interface/dark/copy.svg",
          "light": "media/icons/interface/light/copy.svg"
        }
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "snippet-cat.main.viewSwitch",
          "when": "view == snippet-cat-view",
          "group": "navigation@6"
        },
        {
          "command": "snippet-cat.main.download",
          "when": "view == snippet-cat-view",
          "group": "navigation@3"
        },
        {
          "command": "snippet-cat.main.upload",
          "when": "view == snippet-cat-view",
          "group": "navigation@4"
        },
        {
          "command": "snippet-cat.main.search",
          "when": "view == snippet-cat-view",
          "group": "navigation@2"
        },
        {
          "command": "snippet-cat.main.addGroup",
          "when": "view == snippet-cat-view",
          "group": "navigation@1"
        },
        {
          "command": "snippet-cat.main.refresh",
          "when": "view == snippet-cat-view"
        },
        {
          "command": "snippet-cat.main.addStockPath",
          "when": "view == snippet-cat-view"
        },
       
        {
          "command": "snippet-cat.outline.refresh",
          "when": "view == snippet-cat-outline"
        }
      ],
      "view/item/context": [
        {
          "command": "snippet-cat.main.addSnippet",
          "when": "view == snippet-cat-view && viewItem == Group",
          "group": "inline@1"
        },
        {
          "command": "snippet-cat.main.addGroup",
          "when": "view == snippet-cat-view && viewItem == Group",
          "group": "inline@2"
        },
        {
          "command": "snippet-cat.main.editGroup",
          "when": "view == snippet-cat-view && viewItem == Group",
          "group": "inline@3"
        },
        {
          "command": "snippet-cat.main.openGroup",
          "when": "view == snippet-cat-view && viewItem == Group",
          "group": "inline@4"
        },
        {
          "command": "snippet-cat.main.deleteGroup",
          "when": "view == snippet-cat-view && viewItem == Group",
          "group": "inline@10"
        },
        {
          "command": "snippet-cat.main.editSnippet",
          "when": "view == snippet-cat-view && viewItem == Snippet",
          "group": "inline@1"
        },
        {
          "command": "snippet-cat.main.deleteSnippet",
          "when": "view == snippet-cat-view && viewItem == Snippet",
          "group": "inline@10"
        },
        {
          "command": "snippet-cat.outline.copy",
          "when": "view == snippet-cat-outline && viewItem == Title",
          "group": "inline@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.11.58",
    "@types/vscode": "^1.71.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.19",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "dependencies": {
    "fs-extra": "^10.1.0",
    "getmac": "^5.20.0",
    "webdav": "^4.11.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Yuelioi/snippet-cat.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Yuelioi/snippet-cat/issues"
  },
  "homepage": "https://github.com/Yuelioi/snippet-cat#readme"
}